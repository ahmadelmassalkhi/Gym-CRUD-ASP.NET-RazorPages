@page
@model Gym.Pages.Memberships.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Membership</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-page="Memberships/Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Membership.FullName" class="control-label"></label>
                <input asp-for="Membership.FullName" class="form-control" />
                <span asp-validation-for="Membership.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Membership.PhoneNumber" class="control-label"></label>
                <input asp-for="Membership.PhoneNumber" class="form-control" />
                <span asp-validation-for="Membership.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Membership.RegisterDate" class="control-label"></label>
                <input asp-for="Membership.RegisterDate" class="form-control" type="date" />
                <span asp-validation-for="Membership.RegisterDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Membership.ExpireDate" class="control-label"></label>
                <input asp-for="Membership.ExpireDate" class="form-control" type="date" />
                <span asp-validation-for="Membership.ExpireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
